@model Oglasi.Model.Ad

<nav class="mt-3" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Početna</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
    </ol>
</nav>

<div class="row mr-0 ml-0 mt-3">
    <div class="card p-0 col-12 col-md-6">
        <img class="card-img-top" src="~/images/@Model.ImagePath" alt="Card image cap">
        <div class="card-body">
            <h1 class="card-title">@Model.Title</h1>
            <p class="card-text p-1"><strong>Opis:</strong> @Model.Description</p>
            <p class="card-text"><i class="fas fa-phone"></i> @Model.ContactNumber</p>
            <p class="card-text"><i class="fas fa-map-marker-alt"></i> @Model.Address, @Model.County.Name</p>
        </div>
    </div>
</div>
